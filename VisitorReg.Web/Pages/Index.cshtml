@page
@model IndexModel
@{
    ViewData["Title"] = "首頁";
}

<div class="text-center">
    <h1 class="display-4">歡迎使用訪客登記系統</h1>
    <p class="lead">國立新化高工資訊科</p>
    <hr class="my-4" />
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-plus-fill" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h5 class="card-title mt-3">訪客登記</h5>
                    <p class="card-text">快速建立訪客登記資料</p>
                    <a asp-page="/Visitors/Create" class="btn btn-primary">開始登記</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-search" style="font-size: 3rem; color: #198754;"></i>
                    <h5 class="card-title mt-3">查詢訪客</h5>
                    <p class="card-text">查詢與管理訪客資料</p>
                    <a asp-page="/Visitors/Index" class="btn btn-success">查詢訪客</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-box-arrow-right" style="font-size: 3rem; color: #dc3545;"></i>
                    <h5 class="card-title mt-3">離場登記</h5>
                    <p class="card-text">記錄訪客離場時間</p>
                    <a asp-page="/Visitors/Index" class="btn btn-danger">離場登記</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
